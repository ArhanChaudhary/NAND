{
  "targets": {
    "debug": {
      "outFile": "build/debug.wasm",
      "debug": true
    },
    "release": {
      "outFile": "build/release.wasm",
      "uncheckedBehavior": "always",
      "optimizeLevel": 3,
      "shrinkLevel": 0,
      "converge": true,
      "noAssert": true,
      "pedantic": true
    }
  },
  "options": {
    "bindings": "esm"
  }
}